{% extends 'backend/backbody.html.twig' %}

{% block content %}

    <div class="container">
        <h1>Liste des réclamations</h1> <br> <br>
                <div class="row">
                    <table class="table" class="center">
                        <thead>
                            <tr>
                             <th>Id</th>
                             <th>Date de réclamation</th>
                             <th>Description</th>
                             <th>Propriétaire de la réclamation</th>
                             <th>Id service</th>
                             <th>Statistique</th>
                            </tr>
                        </thead>
                            <tbody>
                                {% for reclamation in reclamations %}
                                    <tr>
                                        <td>{{ reclamation.id }}</td>
                                        <td>{{ reclamation.date ? reclamation.date|date('Y-m-d') : '' }}</td>
                                        <td>{{ reclamation.description ? reclamation.description}}</td>
                                        <td>{{ reclamation.iduser.id}}</td>
                                        <td>{{ reclamation.idservice.id}}</td>
                                        <td><a href="{{ path('reclamation_stat')}}" class="btn btn-warning">stats</a></td>

                                        {#
                                        <td>
                                            <a href="{{ path('reclamation_delete_admin', {'id': reclamation.id}) }}">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </td>

                                        #}

                                    </tr>
                                     {% else %}
                                  <tr>
                                        <td colspan="4">Aucune réclamation n'est disponible</td>
                                  </tr>
                          {% endfor %}
                         </tbody>
                    </table>
                </div>
    </div>

{% endblock %}
