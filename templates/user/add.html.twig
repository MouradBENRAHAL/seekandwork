{% extends 'signup/signup.html.twig' %}
{% block content %}

    {{ form_start(form,{attr:{'id':'form'}}) }}
    <div class="container">
        <div class="form-group first">
            {{ form_label(form.nom,"Nom du user:") }}

            {{ form_widget(form.nom, {attr: {class:'form-control'}}) }}
        </div>
        <div class="form-group first">
            {{ form_label(form.prenom,"Prenom du user:" ) }}

            {{ form_widget(form.prenom,{attr: {class:'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.email,"Email du user:" ) }}

            {{ form_widget(form.email,{attr: {class:'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.username,"Username du user:" ) }}

            {{ form_widget(form.username,{attr: {class:'form-control'}}) }}
        </div>
        <div class="form-group last mb-4">
            {{ form_label(form.mdp,"Password du user:" ) }}

            {{ form_widget(form.mdp,{attr: {class:'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.image,"image:") }}

            {{ form_widget(form.image,{attr: {class:'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.role,"Role du user:" ) }}

            {{ form_widget(form.role,{attr: {class:'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.enabled,"Password du user:" ) }}

            {{ form_widget(form.enabled,{attr: {class:'form-control'}}) }}
        </div>

    </div>
    <div class="card-footer">
        <button type="submit" href="{{ path('add_user') }}" class="btn btn-primary">Submit</button>
    </div>




    {{ form_end(form) }}
{% endblock content %}